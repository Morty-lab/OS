import os

DB_FILENAME = 'names.txt'

# check if DB file exists, create it if it doesn't
if not os.path.exists(DB_FILENAME):
    with open(DB_FILENAME, 'w') as f:
        f.write('')  # write an empty string to create the file

# load names from DB file into a dictionary
with open(DB_FILENAME, 'r') as f:
    names = {name.strip(): True for name in f if name.strip()}

# define search and add functions
def search(name):
    return name in names

def add(name):
    if name not in names:
        names[name] = True
        return True  # name was added successfully
    else:
        return False  # name already exists in database

# define save function to overwrite DB file with current names
def save():
    with open(DB_FILENAME, 'w') as f:
        f.write('\n'.join(names.keys()))

# example usage
print(search('Alice'))  # prints False
print(add('Alice'))  # prints True
print(search('Alice'))  # prints True
save()  # saves the current names to the DB file
